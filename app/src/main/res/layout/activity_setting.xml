<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ycc="http://schemas.android.com/apk/res/com.ycc.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:background="#8866ff00"
        android:gravity="center"
        android:text="设置中心"
        android:textColor="#000000"
        android:textSize="22sp"/>

    <com.ycc.mobilesafe.ui.SettingitemView
        ycc:title="设置自动更新"
        ycc:desc_on="设置自动更新已经开启"
        ycc:desc_off="设置自动更新已经关闭"
        android:id="@+id/siv_update"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    </com.ycc.mobilesafe.ui.SettingitemView>

    <com.ycc.mobilesafe.ui.SettingitemView
        android:id="@+id/siv_show_addr"
        ycc:title="号码归属地显示"
        ycc:desc_on="号码归属地显示已经开启"
        ycc:desc_off="号码归属地显示已经关闭"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    </com.ycc.mobilesafe.ui.SettingitemView>

    <com.ycc.mobilesafe.ui.SettingclickView
        android:id="@+id/scv_changebg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    </com.ycc.mobilesafe.ui.SettingclickView>

    <com.ycc.mobilesafe.ui.SettingitemView
        android:id="@+id/siv_callsms_safe"
        ycc:title="黑名单拦截设置"
        ycc:desc_on="黑名单拦截已经开启"
        ycc:desc_off="黑名单拦截已经关闭"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    </com.ycc.mobilesafe.ui.SettingitemView>


</LinearLayout>
