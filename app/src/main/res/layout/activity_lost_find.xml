<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:background="#9966ff00"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="22sp"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:text="手机防盗"
        android:id="@+id/textView" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="8dip"
            android:layout_marginLeft="5dip"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="安全号码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dip"
            android:layout_marginRight="5dip"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="xxxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    
    <View
        android:layout_marginTop="10dip"
        android:background="#44000000"
        android:layout_width="fill_parent"
        android:layout_height="0.2dip"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="8dip"
            android:layout_marginLeft="5dip"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="防盗保护是否开启"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/unlock"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dip"
            android:layout_marginRight="5dip"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="30dip"
            android:layout_height="30dip" />
    </RelativeLayout>

    <View
        android:layout_marginTop="10dip"
        android:background="#44000000"
        android:layout_width="fill_parent"
        android:layout_height="0.2dip"/>
    <TextView
        android:background="@drawable/shape_selector"
        android:clickable="true"
        android:onClick="reEnterSetup"
        android:layout_marginTop="8dip"
        android:layout_marginLeft="5dip"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="重新进入设置向导"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="5dip"
        android:background="#44000000"
        android:layout_width="fill_parent"
        android:layout_height="0.2dip"/>

    <!--功能简介-->
    <TextView
        android:background="#44000000"
        android:layout_marginTop="8dip"
        android:layout_marginLeft="5dip"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="功能简介"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="GPS追踪:#*location*#"
        style="@style/text_content_style"
        android:drawableLeft="@android:drawable/star_big_on"
        />
    <TextView
        android:text="播放报警音乐:#*alarm*#"
        style="@style/text_content_style"
        android:drawableLeft="@android:drawable/star_big_on"
        />
    <TextView
        android:text="远程数据销毁:#*wipedata*#"
        style="@style/text_content_style"
        android:drawableLeft="@android:drawable/star_big_on"
        />
    <TextView
        android:text="远程锁屏:#*lockscreen*#"
        style="@style/text_content_style"
        android:drawableLeft="@android:drawable/star_big_on"
        />

</LinearLayout>
